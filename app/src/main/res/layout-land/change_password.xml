<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    xmlns:android="http://schemas.android.com/apk/res/android" />
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@android:color/background_light">



        <TextView
            android:id="@+id/textView"
            android:layout_width="163dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="PASSWORD"
            android:textColor="#607d8b"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="83dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/op1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/view"
            android:layout_marginBottom="-138dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="30dp"
            android:text="Old Password"
            android:textColor="#607d8b"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/op2"
            android:layout_width="332dp"
            android:layout_height="41dp"
            android:layout_below="@+id/op1"
            android:layout_marginTop="138dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/grey_ellipse"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/np1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/op1"
            android:layout_marginTop="200dp"
            android:text="New Password"
            android:textColor="#607d8b"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/np2"
            android:layout_width="332dp"
            android:layout_height="41dp"
            android:layout_alignStart="@+id/op2"
            android:layout_below="@+id/np1"
            android:background="@drawable/grey_ellipse"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/confirm_password1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignStart="@+id/np1"
            android:layout_marginTop="300dp"
            android:text="Confirm New Password"
            android:textColor="#607d8b"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/confirm_password2"
            android:layout_width="332dp"
            android:layout_height="41dp"
            android:layout_below="@+id/confirm_password1"
            android:layout_alignStart="@+id/np2"
            android:background="@drawable/grey_ellipse"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button7"
            android:layout_width="214dp"
            android:layout_height="41dp"
            android:layout_below="@id/confirm_password2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/registration_ellipse"
            android:text="CHANGE PASSWORD"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button8"
            android:layout_width="212dp"
            android:layout_height="41dp"
            android:layout_below="@+id/button7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_ellipse"
            android:text="GO TO LOGIN FORM"
            android:textColor="#455A64"
            android:textStyle="bold" />

    </RelativeLayout>
</ScrollView>